<TelaApresentacaoView>:
    name:'s6'

    MDFloatLayout:
        Image:
            source: 'images/logo.png'
            size_hint: (0.05, 0.05)
            pos_hint: {'center_x': .82, 'center_y': .95}

        MDLabel:
            text: 'CYPHER'
            font_style: 'H5'
            bold: True
            halign: 'center'
            pos_hint: {'center_x': .9, 'center_y': .95}

        MDLabel:
            text: 'Letras Escaneadas'
            font_style: 'H3'
            bold: True
            halign: 'center'
            pos_hint: {'center_x': .5, 'center_y': .6}

        MDLabel:
            id: text
            font_style: 'H5'
            bold: True
            halign: 'center'
            pos_hint: {'center_x': .5, 'center_y': .4}

        MDFillRoundFlatButton:
            text: "Voltar"
            font_size: 20
            elevation: 8
            text_color: 1,1,1,1
            md_bg_color: 1.00, 0.19, 0.19
            pos_hint: {'center_x': .5, 'center_y': .1}
            elevation: 2
            size_hint:(.1,.1)
            on_release:
                root.manager.transition.direction = 'left'
                root.manager.current = "s3"
