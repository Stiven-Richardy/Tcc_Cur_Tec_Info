<TelaArquivoView>:
    name:'s4'

    MDFloatLayout:
        Image:
            source: 'images/logo.png'
            size_hint: (0.05, 0.05)
            pos_hint: {'center_x': .82, 'center_y': .95}

        MDLabel:
            text: 'CYPHER'
            font_style: 'H5'
            bold: True
            halign: 'center'
            pos_hint: {'center_x': .9, 'center_y': .95}


        MDIconButton:
            icon: "arrow-left"
            pos_hint: {'center_y': 0.95, 'center_x': 0.05}
            user_font_size: "30sp"
            on_release:
                root.manager.transition.direction = 'right'
                root.manager.current = "s3"

        MDLabel:
            text: 'Confirme a imagem que ser√° escaneadas'
            font_style: 'Caption'
            halign: 'center'
            font_style: 'H5'
            pos_hint: {'center_x': .5, 'center_y': .85}

        Image:
            size_hint_x: .7
            size_hint_y: .5
            id: img
            pos_hint: {'center_x': .5, 'center_y': .5}

        MDLabel:
            id: text
            font_style: 'Caption'
            halign: 'center'
            font_style: 'H5'
            pos_hint: {'center_x': .5, 'center_y': .2}

        MDFillRoundFlatButton:
            text: "Confirmar"
            font_size: 20
            elevation: 8
            text_color: 1,1,1,1
            md_bg_color: 1.00, 0.19, 0.19
            pos_hint: {'center_x': .5, 'center_y': .1}
            elevation: 2
            size_hint:(.1,.1)
            on_release:
                root.manager.transition.direction = 'left'
                root.manager.current = "s5"